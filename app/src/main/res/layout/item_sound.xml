<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="4dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/windowPremium"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vector_ic_sound"
                app:tint="@color/white"
                android:contentDescription="@string/sounds"
                android:layout_margin="10dp" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_premium"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/vector_ic_premium"
            app:tint="@color/yellow"
            android:contentDescription="@string/premium"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/sounds" />

    <SeekBar
        android:id="@+id/sb_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>